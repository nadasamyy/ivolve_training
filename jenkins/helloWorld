@Library('jenkins-shared-library') _

import org.example.UtilityClass

pipeline {
    agent any
    stages {
        stage('Test UtilityClass') {
            steps {
                script {
                    // Print a message
                    UtilityClass.printMessage('This is a test message from UtilityClass.')

                    // Format a text
                    String formatted = UtilityClass.formatText('INFO', 'Pipeline executed successfully.')
                    echo formatted

                    // Validate input
                    boolean isValid = UtilityClass.validateInput(' Jenkins Shared Library ')
                    echo "Is input valid? ${isValid}"
                }
            }
        }
    }
}

